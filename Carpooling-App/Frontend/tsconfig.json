{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "/*.ts",
    "/*.tsx",
    "/*.jsx",
    ".expo/types//*.ts",
    "expo-env.d.ts",
    "src",
    ".expo/types/**/*.ts"
  ]
}
